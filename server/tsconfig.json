{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@jwtAuthGuard/jwt-auth-guard": ["libs/jwt-auth-guard/src"],
      "@jwtAuthGuard/jwt-auth-guard/*": ["libs/jwt-auth-guard/src/*"],
      "@errorCatcher/error-catcher": ["libs/error-catcher/src"],
      "@errorCatcher/error-catcher/*": ["libs/error-catcher/src/*"],
      "@sharedService/shared-service": ["libs/shared-service/src"],
      "@sharedService/shared-service/*": ["libs/shared-service/src/*"],
      "@sharedService/shared": ["libs/shared/src"],
      "@sharedService/shared/*": ["libs/shared/src/*"],
      "@prismaORM/prisma": ["libs/prisma/src"],
      "@prismaORM/prisma/*": ["libs/prisma/src/*"]
    }
  }
}
